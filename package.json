    "axios": "^1.7.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "framer-motion": "^11.15.0",
    "google-libphonenumber": "^3.2.40",
    "isbot": "^5.1.17",
    "jwt-decode": "^4.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-icons": "^5.4.0",
    "react-international-phone": "^4.4.0",
    "react-router": "^7.1.1",
    "react-toastify": "^11.0.2",
